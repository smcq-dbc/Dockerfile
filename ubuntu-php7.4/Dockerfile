FROM ubuntu:20.04

RUN echo "" | base64 -d > /etc/apt/sources.list && \
    apt-get update && \
    DEBIAN_FRONTEND=noninteractive apt-get -y install php && \
    chmod -R 777 /var/lib/php/sessions && \
    chown www-data:www-data /var/www/html && \
    apt-get install -y vim

CMD  service apache2 start && export FLAG=not_flag && FLAG=not_flag && exec /bin/bash -c "trap : TERM INT; sleep infinity & wait"

EXPOSE 80
